#home
  .col-md-6.col-md-offset-3
    #index-info
      .overlay
        %h1
          Planifica Viajes
        %hr
        %h2
          Crea tus propias historias desde el principio
        - if !signed_in?
          = link_to new_user_registration_path, :method => :get do
            %button.btn.btn-danger.btn-lg= t("auth.register")

        - else
          = link_to profile_path(current_user.username), :method => :get do
            %button.btn.btn-success.btn-lg= t("user.allYourTrips")
